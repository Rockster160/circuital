<div class="container">
  <div class="float-right">
    <%= link_to "Edit", edit_list_path(@list) %>
  </div>

  <h2 class="text-center"><%= @list.name %></h2>

  <%= form_with(model: [@list, ListItem.new], local: true, html: { id: "list-item-form" }) do |f| %>
    <div class="field">
      <div class="flex-row">
        <%= f.text_field :name, class: "form-control" %>
        <%= f.submit "Add Item", class: :button %>
      </div>
    </div>
  <% end %>

  <div id="list-items" data-turbo-prefetch="false">
    <%= render partial: "list_items/index" %>
  </div>
</div>
