<div class="container">
  <%= form_with(model: @blog, local: true) do |f| %>
    <div class="field">
      <%= f.label :title %> </br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :content %> </br>
      <%= f.text_area :content, class: "form-control elastic", rows: 30 %>
    </div>

    <div class="actions">
      <%= f.submit "Save Blog", class: :button %>
    </div>
  <% end %>
</div>
